PROJECT_NAME = reproc
PROJECT_NUMBER = @PROJECT_VERSION@
PROJECT_BRIEF = "Cross-platform library that simplifies working with external CLI applications from C and C++"

QUIET = YES
WARN_IF_UNDOCUMENTED = NO

OPTIMIZE_OUTPUT_FOR_C = YES

OUTPUT_DIRECTORY = @PROJECT_BINARY_DIR@/docs
INPUT = @PROJECT_SOURCE_DIR@/include @PROJECT_SOURCE_DIR@/examples @PROJECT_SOURCE_DIR@/tools/doxygen/mainpage.md
EXAMPLE_PATH = @PROJECT_SOURCE_DIR@/examples
RECURSIVE = YES

ENABLE_PREPROCESSING = YES
MACRO_EXPANSION = YES
EXPAND_ONLY_PREDEF = YES
PREDEFINED = REPROC_EXPORT

TYPEDEF_HIDES_STRUCT = YES
EXTRACT_STATIC = YES

SORT_MEMBER_DOCS = NO

TAGFILES += "cppreference-doxygen-web.tag.xml=http://en.cppreference.com/w/"

USE_MDFILE_AS_MAINPAGE = @PROJECT_SOURCE_DIR@/tools/doxygen/mainpage.md

GENERATE_LATEX = NO
